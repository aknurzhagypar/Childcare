<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="7dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card_type"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/article_image"
            android:layout_width="75dp"
            android:layout_height="105dp"
            android:padding="5dp"
            android:src="@drawable/eating_child"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/article_topic"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="Тестовое название"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/article_image"
            app:layout_constraintRight_toLeftOf="@+id/nextButton"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/article_like"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            app:layout_constraintRight_toLeftOf="@+id/nextButton"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_baseline_favorite_border_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <ImageView
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:background="@drawable/rectangle"
            android:src="@drawable/ic_baseline_navigate_next_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>