<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="25dp">

    <TextView
        android:id="@+id/text_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="@string/text_top"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="102"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/text_top" />

    <TextView

        android:id="@+id/text_middle_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:text="@string/middle_second"
        app:layout_constraintTop_toBottomOf="@+id/text_middle" />

    <TextView

        android:id="@+id/text_middle_th"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:drawableLeft="@drawable/ic_baseline_brightness_1_24"
        android:drawablePadding="5dp"
        android:text="написать заявление;"
        app:layout_constraintTop_toBottomOf="@+id/text_middle_second" />

    <TextView
        android:id="@+id/text_middle_f"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:drawableLeft="@drawable/ic_baseline_brightness_1_24"
        android:drawablePadding="5dp"
        android:text="@string/text_bottom"
        app:layout_constraintTop_toBottomOf="@+id/text_middle_th" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/button1"
        android:padding="15dp"
        android:background="@drawable/bg_card_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/text_middle_f">

        <ImageView
            android:id="@+id/image"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/harmful"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/black"
            android:paddingLeft="20dp"
            app:layout_constraintLeft_toRightOf="@+id/image"
            android:layout_width="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="wrap_content"
            android:text="Насилие над детьми.\nВиды насилия"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout

        android:padding="15dp"
        android:background="@drawable/bg_card_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/button1">

        <ImageView
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/image2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/harmful"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/image2"
            android:paddingLeft="20dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Срочные меры в случае\nнасилия или подозрении на \nриск насилия."
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>