<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".content.surveys.start.SurveyStartFragment">




    <LinearLayout
        android:layout_marginHorizontal="14dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <RelativeLayout
            android:gravity="center"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="6dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/hfLocationIc"
                android:fontFamily="@font/khula_bold"
                android:text="Опрос про развитие ребенка"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </RelativeLayout>

        <ImageView
            android:layout_marginVertical="25dp"
            android:scaleType="centerCrop"
            android:src="@drawable/eating_child"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginVertical="12dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="Сколько месяцев вашему малышу?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/inputChildAge"
            android:inputType="number"
            android:paddingVertical="8dp"
            android:background="@drawable/round_grey_edit_text"
            android:layout_marginVertical="12dp"
            android:gravity="center"
            android:hint="Введите возраст"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <TextView

        android:textSize="16sp"
        android:id="@+id/surveyNextStep"
        android:paddingVertical="6dp"
        android:paddingHorizontal="24dp"
        android:textColor="@color/white"
        android:background="@drawable/round_purple_btn"
        android:layout_margin="24dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="Далее"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <FrameLayout
        android:id="@+id/surveyStartFragLv"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#31000000" />

        <ProgressBar
            android:padding="2dp"
            android:background="@drawable/round_orange_btn"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>

</RelativeLayout>